<robot name="DiffRobot">
	<!-- CHASSIS LINK -->
	<link name="base_link">
		
		<inertial>
			<mass value="1"/>
		</inertial>

		<visual name="chassis" with_col="true">
			<origin xyz="0 0 0.04" rpy="0 0 0"/>
			<geometry>
				<cylinder radius="0.18" length="0.05"/>
			</geometry>
			<material name="">
				<color rgba="0 0.1 0.5 1"/>
			</material>
		</visual>
		
		<visual name="front_flag">
			<origin xyz="0.12 0 0.065" rpy="0 0 0"/>
			<geometry>
				<box size="0.05 0.1 0.01"/>
			</geometry>
			<material name="">
			<color rgba="1 0 0 1"/>
			</material>
		</visual>
	</link>
	
	<!-- RIGHT WHEEL LINK --> 
	<link name="right_wheel">
		<inertial>
			<mass value="1"/>
		</inertial>
		<visual name="wheel" with_col="true">
			<origin xyz="0 0 0" rpy="1.57 0 0"/>
			<geometry>
				<cylinder radius="0.03" length="0.01"/>
			</geometry>
			<material>
				<color rgba="0 0 1 1"/>
			</material>
		</visual>
	</link>
	
	<joint name="right_joint" type="continuous">
		<origin xyz="0.0 -0.14 0.03" rpy="0 0 0"/>
		<parent link="base_link"/>
		<child link="right_wheel"/>
		<axis xyz="0.0 1.0 0.0"/>
		<limit effort="10" velocity="8.0"/>
	</joint>
	
	<!-- LEFT WHEEL LINK -->
	<link name="left_wheel">
		<inertial>
			<mass value="1"/>
		</inertial>
		<visual name="wheel" with_col="true">
			<origin xyz="0 0 0" rpy="1.57 0 0"/>
			<geometry>
				<cylinder radius="0.03" length="0.01"/>
			</geometry>
			<material>
				<color rgba="0 0 1 1"/>
			</material>
		</visual>
	</link>
	
	<joint name="left_joint" type="continuous">
		<origin xyz="0.0 0.14 0.03" rpy="0 0 0"/>
		<parent link="base_link"/>
		<child link="left_wheel"/>
		<axis xyz="0.0 1.0 0.0"/>
		<limit effort="10" velocity="8.0"/>
	</joint>
	
	<!-- BACK CASTER WHEEL LINK -->
	<link name="back_caster_wheel">
		<inertial>
			<mass value="1"/>
			<friction value="0.9" />
		</inertial>
        <visual name="wheel" with_col="true">
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
	        <material>
				<color rgba="0 0 0 1"/>
			</material>
        </visual>
    </link>
	
	<joint name="back_caster_joint" type="pin">
		<origin xyz="-0.14 0.0 0.021" rpy="0 0 0"/>
		<parent link="base_link"/>
		<child link="back_caster_wheel"/>
	</joint>
	
	<!-- FRONT CASTER WHEEL LINK -->
	<link name="front_caster_wheel">
		<inertial>
			<mass value="1"/>
			<friction value="0.9" />
		</inertial>
        <visual name="wheel" with_col="true">
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
	        <material>
				<color rgba="0 0 0 1"/>
			</material>
        </visual>
    </link>
	
	<joint name="front_caster_joint" type="pin">
		<origin xyz="0.14 0.0 0.020" rpy="0 0 0"/>
		<parent link="base_link"/>
		<child link="front_caster_wheel"/>
	</joint>
	
	<gobotics name="control_robot" type="diff_drive">
        <right_wheel joint="right_joint"/>
        <left_wheel joint="left_joint"/>
		<max_speed value="8.0"/>
    </gobotics>

</robot>
